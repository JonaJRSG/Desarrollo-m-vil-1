<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppointmentSimulator.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="15">

            <HorizontalStackLayout VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Spacing="10">
                <Button Text="+" 
                    HorizontalOptions="Start"
                    VerticalOptions="End"
                    Clicked="OnAddNewAppointmentClicked" />
                <Button Text="Eliminar Cita Seleccionada" 
                        Clicked="OnDeleteAppointmentClicked" />
            </HorizontalStackLayout>

            <CollectionView x:Name="AppointmentsCollectionView"
                            SelectionMode="Single"
                            Margin="0,10,0,0"
                            SelectionChanged="AppointmentsCollectionView_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#D1D1D1"
                                StrokeThickness="1"
                                Background="#F5F5F5"
                                Margin="0,15"
                                Padding="10"
                                StrokeShape="RoundRectangle 12">
                            <Grid RowSpacing="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Label Text="Nombre:"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>
                                <Label Text="Asunto"
                                       Grid.Column="0"
                                       Grid.Row="1"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>
                                <Label Text="Fecha de la cita:"
                                       Grid.Column="0"
                                       Grid.Row="2"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>
                                <Label Text="Hora:"
                                       Grid.Column="0"
                                       Grid.Row="3"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>

                                <Label Text="{Binding Name}"
                                       Grid.Column="1"
                                       Grid.Row="0"
                                       TextColor="#0077CC"/>
                                <Label Text="{Binding Subject}"
                                       Grid.Column="1"
                                       Grid.Row="1"
                                       TextColor="#0077CC"/>
                                <Label Text="{Binding AppointmentDate, StringFormat='{dd/MM/yyyy}'}"
                                       Grid.Column="1"
                                       Grid.Row="2"
                                       TextColor="#0077CC"/>
                                <HorizontalStackLayout Grid.Column="1"
                                                       Grid.Row="3"
                                                       Spacing="4">
                                    <Label Text="{Binding StartingTime, StringFormat='{HH:mm}'}"
                                           TextColor="#0077CC"/>
                                    <Label Text="-"
                                           TextColor="#0077CC"/>
                                    <Label Text="{Binding EndingTime, StringFormat='{HH:mm}'}"
                                           TextColor="#0077CC"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
