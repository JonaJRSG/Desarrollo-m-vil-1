<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppointmentSimulator.Pages.AddNewAppointmentPage"
             Title="Agregar Nueva Cita">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="NameEntry"
               Placeholder="Nombre"
               Text="{Binding Name}" />

        <Entry x:Name="SubjectEntry"
               Placeholder="Asunto"
               Text="{Binding Subject}" />

        <DatePicker x:Name="DatePicker"
                    Date="{Binding AppointmentDate}" />

        <TimePicker x:Name="StartTimePicker"
                    Time="{Binding StartingTime}" />

        <TimePicker x:Name="EndTimePicker"
                    Time="{Binding EndingTime}" />

        <Button Text="Guardar Cita"
                Command="{Binding SaveAppointmentCommand}" />
    </VerticalStackLayout>
</ContentPage>